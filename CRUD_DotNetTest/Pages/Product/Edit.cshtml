@page
@model CRUD_DotNetTest.Pages.Product.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Produk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produk.ID" />
            <div class="form-group">
                <label asp-for="Produk.Nama_Barang" class="control-label"></label>
                <input asp-for="Produk.Nama_Barang" class="form-control" />
                <span asp-validation-for="Produk.Nama_Barang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produk.Harga" class="control-label"></label>
                <input asp-for="Produk.Harga" class="form-control" />
                <span asp-validation-for="Produk.Harga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produk.Stok" class="control-label"></label>
                <input asp-for="Produk.Stok" class="form-control" />
                <span asp-validation-for="Produk.Stok" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

